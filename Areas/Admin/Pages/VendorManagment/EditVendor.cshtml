@page 
@model AssetProject.Areas.Admin.Pages.VendorManagment.EditVendorModel
@{
}


<div class="slim-mainpanel">
    <div class="container">
        <div class="slim-pageheader">
            <ol class="breadcrumb slim-breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Set Up</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit Vendor</li>
            </ol>
            <h6 class="slim-pagetitle">Vendor Information</h6>
        </div><!-- slim-pageheader -->

        <div class="section-wrapper">
            <label class="section-title">Please fill your information</label>
            @*<p class="mg-b-20 mg-sm-b-40">Please fill your company information</p>*@

            <div class="form-layout">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mg-b-25">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label">Vendor Title: <span class="tx-danger">*</span></label>
                                <input asp-for="Vendor.VendorTitle" class="form-control" placeholder="Enter Contract Title">
                                <span asp-validation-for="Vendor.VendorTitle" class="text-danger"></span>
                            </div>
                        </div><!-- col-4 -->

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label"> Phone: <span class="tx-danger">*</span></label>
                                <input asp-for="Vendor.Phone" class="form-control" placeholder="Enter your Phone">

                            </div>
                        </div><!-- col-4 -->

                        <div class="col-lg-4">
                            <div class="form-group mg-b-10-force">
                                <label class="form-control-label"> Mobile: <span class="tx-danger">*</span></label>
                                <input asp-for="Vendor.Mobile" class="form-control" placeholder="Enter Contract No">
                                <span asp-validation-for="Vendor.Mobile" class="text-danger"></span>
                            </div>
                        </div><!-- col-4 -->

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label">Email: <span class="tx-danger">*</span></label>
                                <input asp-for="Vendor.Email" type="email" class="form-control" placeholder="Enter your Email">
                                <span asp-validation-for="Vendor.Email" class="text-danger"></span>
                            </div>
                        </div><!-- col-4 -->

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label">WebSite : <span class="tx-danger">*</span></label>
                                <input asp-for="Vendor.Website" type="url" class="form-control date">
                                <span asp-validation-for="Vendor.Website" class="text-danger"></span>
                            </div>
                        </div><!-- col-4 -->

                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label">Contact Person Name : <span class="tx-danger">*</span></label>
                                <input asp-for="Vendor.ContactPersonName" class="form-control date">
                                <span asp-validation-for="Vendor.ContactPersonName" class="text-danger"></span>
                            </div>
                        </div><!-- col-4 -->
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label">Contact Person Email : <span class="tx-danger">*</span></label>
                                <input asp-for="Vendor.ContactPersonEmail" type="email" class="form-control date">
                                <span asp-validation-for="Vendor.ContactPersonEmail" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label">Contact Person Phone : <span class="tx-danger">*</span></label>
                                <input asp-for="Vendor.ContactPersonPhone" class="form-control date">
                                <span asp-validation-for="Vendor.ContactPersonPhone" class="text-danger"></span>
                            </div>
                        </div>
                        @*<div class="col-lg-4">
                            <div class="form-group">
                                <label class="form-control-label">Vendor: <span class="tx-danger">*</span></label>

                                @(Html.DevExtreme().LookupFor(c=>c.Contract.VendorId)
            .DataSource(d => d.WebApi()
                .Controller("Lookups")
                .LoadAction("VendorsLookup")
                .Key("Value")
            )
            .ValueExpr("Value")
            .DisplayExpr("Text")
        )
                                <span asp-validation-for="Contract.VendorId" class="text-danger"></span>
                            </div>
                        </div>*@

                        <input asp-for="Vendor.VendorId" class="form-control" placeholder="Enter Company name" hidden>

                    </div><!-- row -->

                    <div class="form-layout-footer">
                        <button class="btn btn-primary bd-0">Edit </button>
                        <a asp-area="Admin" asp-page="/VendorManagment/VendorList">
                            <input type='button' class="btn btn-secondary bd-0" value='Cancel' />
                        </a>
                    </div><!-- form-layout-footer -->
                </form>

            </div><!-- form-layout -->
        </div><!-- section-wrapper -->

    </div><!-- container -->
</div>

    
