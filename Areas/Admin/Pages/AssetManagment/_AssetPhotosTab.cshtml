@model int
@inject AssetContext Context;

 <a href="javascript:void(0)" onclick="ShowAddAssetPhotoPopUp()" class="btn btn-primary" style="float:right">Add New Photo </a>
 <p id="Deletephotot"></p>
<div id="AssetPhotoPoup" class="modal fade effect-super-scaled" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-vertical-center modal-lg" role="document">
        <form asp-area="Admin" asp-page="/AssetManagment/AssetProfile" asp-page-handler="AddAssetPhotot" asp-route-AssetId="@Model" enctype="multipart/form-data">
        <div class="modal-content bd-0 tx-14">
            <div class="modal-header pd-y-20 pd-x-25">
                <h6 class="tx-14 mg-b-0 tx-uppercase tx-inverse tx-bold" id="AssetDescriptiontxt"></h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body pd-25">
                @(Html.DevExtreme().Form<AssetProject.Models.AssetPhotos>()
                .ID("AssetPhotoFrm")
                .ColCount(2)
                
                    @*.OnContentReady("function(e){   getData(e,data)  }")  *@
                .Items(items => {
               // items.AddSimpleFor(m => m.AssetId).Editor(e => e.TextBox().ReadOnly(true));
                items.AddSimpleFor(m => m.Remarks);
            
 
        

                items.AddSimpleFor(m => m.PhotoUrl).Label(k => k.Text("Photo")).Template(@<text>
                     <div class="form-group">
                            @* <span> Asset Photo</span>*@
                              <div class="custom-file">
                                  <input type="file"  name="file" accept=".png, .jpg, .jpeg" class="custom-file-input" onchange="changephotoname()" id="Photo" required>
                                  <label class="custom-file-label" for="File" id="photolabel">Choose Asset Photo</label>
                              </div>
                          </div>
                                </text> );

                })
                )  
                <br />
                
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
        </form>
    </div><!-- modal-dialog -->
</div>

@{
    var AssetPhotos = Context.AssetPhotos.Where(a => a.AssetId == Model).ToList();
}
@foreach(var item in AssetPhotos)
{
    var AssetPhoto = "/"+item.PhotoUrl;
    
           <div class="card" style="width:200px;display:inline-block">
                <div class="card-body">
                  <img class="img-fluid mg-b-0" src="@AssetPhoto" width="200" height="200" alt="Image">
                </div><!-- card-body -->
                <div class="card-footer bd-t tx-right">
                  <a href="javascript:void(0)" onclick="DeletePhoto(@item.AssetId,@item.AssetPhotoId)"><span class="material-symbols-outlined" >delete</span></a>
                  <a href="javascript:void(0)"><span class="material-symbols-outlined">search</span> </a>
            
                </div><!-- card-footer -->
              </div>
