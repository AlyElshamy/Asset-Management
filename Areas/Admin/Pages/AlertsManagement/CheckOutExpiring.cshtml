@page
@model AssetProject.Areas.Admin.Pages.AlertsManagement.CheckOutExpiringModel
@{
}
<div class="slim-mainpanel">
    <div class="container">
        <div class="slim-pageheader">
            <ol class="breadcrumb slim-breadcrumb">
                <li class="breadcrumb-item"><a href="#">@sharedResource["Home"]</a></li>
                <li class="breadcrumb-item"><a href="#">@sharedResource["Assets"]</a></li>
                <li class="breadcrumb-item active" aria-current="page">@sharedResource["Expiring Assets"]</li>
            </ol>
            <h6 class="slim-pagetitle">@sharedResource["CheckOut Expiring Assets List"]</h6>
        </div><!-- slim-pageheader -->
        <div class="section-wrapper">
            <p class="mg-b-20 mg-sm-b-40"> @sharedResource["Search"].</p>
            <div class="table-wrapper">
                <div id="datatable1_wrapper" class="dataTables_wrapper no-footer">

                    @(Html.DevExtreme().DataGrid<AssetProject.Models.AssetMovementDetails>()
.DataSource(ds => ds.Mvc()
    .Controller("Alerts")
    .LoadAction("GetExpiringCheckOut")
    .Key("AssetMovementDetailsId")
)
.RemoteOperations(true)
.Columns(columns => {

columns.AddFor(m => m.Asset.Photo).Caption(sharedResource["Photo"]).Width(100)
                .AllowFiltering(false)
                .AllowSorting(false)
                .CellTemplate(@<text>
                            <div>
                                <img src="/<%- value %>" alt="" width="35" height="35" />
                            </div>
                        </text>);

        columns.AddFor(m => m.Asset.AssetSerialNo).Caption(sharedResource["Asset Serial Number"]);
        columns.AddFor(m => m.Asset.AssetCost).Caption(sharedResource["Asset Cost"]);


        columns.AddFor(m => m.Asset.AssetStatusId).Caption(sharedResource["Asset Status"]).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Lookups").LoadAction("AssetStatusesLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
           
        );
    columns.AddFor(m => m.AssetMovement.LocationId).Caption(sharedResource["Location"]).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Lookups").LoadAction("LocationsLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")

        );
    columns.AddFor(m => m.AssetMovement.DepartmentId).Caption(sharedResource["Department"]).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Lookups").LoadAction("DepartmentsLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );
        columns.AddFor(m => m.Asset.VendorId).Caption(sharedResource["Vendor"]).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Lookups").LoadAction("VendorsLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );
        columns.AddFor(m => m.Asset.Warranty.WarrantyId).Caption(sharedResource["Warranty"]).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Lookups").LoadAction("AssetWarrantyLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );
        columns.AddFor(m => m.Asset.ItemId).Caption(sharedResource["Item"]).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Lookups").LoadAction("ItemsLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );
        columns.AddFor(m => m.Asset.StoreId).Caption(sharedResource["Store"]).Lookup(lookup => lookup
            .DataSource(ds => ds.WebApi().Controller("Lookups").LoadAction("StoresLookup").Key("Value"))
            .ValueExpr("Value")
            .DisplayExpr("Text")
        );


        columns.AddFor(m => m.Remarks).Caption(sharedResource["Remarks"]);
        columns.AddFor(m => m.AssetMovement.DueDate).Caption(sharedResource["Due Date"]);
    })
)

                </div>
            </div><!-- table-wrapper -->
        </div><!-- section-wrapper -->

    </div><!-- container -->
</div>