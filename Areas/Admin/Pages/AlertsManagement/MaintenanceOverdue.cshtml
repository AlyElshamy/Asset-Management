            </text>).Width(150);*@

         columns.AddFor(m => m.Asset.Photo).Caption(sharedResource["Photo"]).Width(100)
                    .AllowFiltering(false)
                    .AllowSorting(false)
                    .CellTemplate(@<text>
                            <div>
                                <img src="/<%- value %>" alt="" width="35" height="35" />
                            </div>
                        </text>);
        //columns.AddFor(m => m.Asset.AssetStatus.AssetStatusTitle).Caption(@sharedResource["Asset Status"]);
        columns.AddFor(m => m.Asset.AssetSerialNo).Caption(@sharedResource["SerialNo."]);
        columns.AddFor(m => m.Asset.AssetCost).Caption(@sharedResource["Asset Cost"]);
        columns.AddFor(m => m.Asset.AssetStatusId).Caption("Asset Status").Lookup(lookup => lookup
          .DataSource(ds => ds.WebApi().Controller("Lookups").LoadAction("AssetStatusesLookup").Key("Value"))
          .ValueExpr("Value")
          .DisplayExpr("Text")
      );

        columns.AddFor(m => m.AssetMaintainanceTitle).Caption(@sharedResource["Maintainance Title"]);

        columns.AddFor(m => m.AssetMaintainanceDueDate).Caption(@sharedResource["Maintainance DueDate"]);

        columns.AddFor(m => m.AssetMaintainanceDetails).Caption(@sharedResource["Maintainance Details"]);

        columns.AddFor(m => m.Technician.TechnicianId).Caption("Technician").Lookup(lookup => lookup
                .DataSource(ds => ds.WebApi().Controller("Lookups").LoadAction("TechniciansLookup").Key("Value"))
                .ValueExpr("Value")
                .DisplayExpr("Text")
            );

