@page "{id:int?}"
@model AssetProject.Areas.Admin.Pages.EmployeeManagement.DetailsEmployeeModel
@{
}
<div class="slim-mainpanel">
      <div class="container">
        <div class="slim-pageheader">
          <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Set Up</a></li>
            <li class="breadcrumb-item active" aria-current="page">Employee Details</li>
          </ol>
          <h6 class="slim-pagetitle">Employee Information</h6>
        </div><!-- slim-pageheader -->

        <div class="section-wrapper">
          <div class="form-layout">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row mg-b-20">
                      <div class="col-lg-4">
                        <div class="form-group">
                          <label class="form-control-label">Full Name : <span class="tx-danger">*</span></label>
                          <div>
                               <label ><h4>@Model.employee.FullName</h4></label>
                          </div>
                         
                        </div>
                      </div><!-- col-4 -->
              
                      <div class="col-lg-4">
                        <div class="form-group">
                          <label class="form-control-label"> Employee ID  : <span class="tx-danger">*</span></label>
                           <div>
                               <label ><h4>@Model.employee.EmployeeId</h4></label>
                          </div>
                        </div>
                      </div>
                      <div class="col-lg-4">
                        <div class="form-group">
                          <label class="form-control-label"> Title : <span class="tx-danger">*</span></label>
                           <div>
                               <label ><h4>@Model.employee.Title</h4></label>
                          </div>
                        </div>
                      </div><!-- col-4 -->
                    </div><!--End Row-->
                    <div class="row mg-b-20">
                      <div class="col-lg-4">
                        <div class="form-group mg-b-10-force">
                          <label class="form-control-label">Phone : <span class="tx-danger">*</span></label>
                           <div  >
                               <label ><h4>@Model.employee.Phone</h4></label>
                          </div>
                        </div>
                      </div><!-- col-4 -->
                      <div class="col-lg-4">
                        <div class="form-group">
                          <label class="form-control-label">Email : <span class="tx-danger">*</span></label>
                           <div >
                               <label><h4 >@Model.employee.Email</h4></label>
                          </div>
                        </div>
                      </div><!-- col-4 -->
              
                      <div class="col-lg-4">
                        <div class="form-group">
                          <label class="form-control-label">Remark <span class="tx-danger">*</span></label>
                           <div >
                               <label><h4>@Model.employee.Remark</h4></label>
                          </div>
                        </div>
                      </div><!-- col-4 -->
                    </div><!--End Row-->
                    <div class="row mg-b-20">
                      <div class="col-lg-6">
                        <div class="form-group">
                          <label class="form-control-label">Notes : <span class="tx-danger">*</span></label>
                           <div>
                               <label ><h4 >@Model.employee.Notes</h4></label>
                          </div>
                        </div>
                      </div><!-- col-6 -->
                    </div><!--End Row-->   
                    <div class="form-layout-footer mt-4 ">
                      <a asp-area="admin" class="btn btn-secondary " asp-page="EmployeeList">Back</a>
                     </div><!-- form-layout-footer -->
          </div><!-- form-layout -->
        </div><!-- section-wrapper --> 
  </div><!-- container -->
</div>