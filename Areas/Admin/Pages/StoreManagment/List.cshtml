@page
@model AssetProject.Areas.Admin.Pages.StoreManagment.ListModel
@{
}
<div class="slim-mainpanel">
    <div class="container">
        <div class="slim-pageheader">
            <ol class="breadcrumb slim-breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">INVENTORY</a></li>
                <li class="breadcrumb-item active" aria-current="page">Store Management</li>
            </ol>
            <h6 class="slim-pagetitle">Store List</h6>
        </div><!-- slim-pageheader -->
        <div class="section-wrapper">
            <label class="section-title d-inline">Store List</label>
            <a asp-area="Admin" asp-page="/StoreManagment/Create" class="btn btn-primary" style="float:right"> Add New Store</a>
            <p class="mg-b-20 mg-sm-b-40">Searching, ordering and paging goodness will be immediately added to the table, as shown in this example.</p>
            <div class="table-wrapper">
                <div id="datatable1_wrapper" class="dataTables_wrapper no-footer">
                    @(Html.DevExtreme().DataGrid<AssetProject.Models.Store>()
    .DataSource(ds => ds.Mvc()
        .Controller("Stores")
        .LoadAction("Get")
        .Key("StoreId")
    )
    .ColumnChooser(cc => cc.Enabled(true))
                    .ColumnAutoWidth(true)
                    .WordWrapEnabled(true)
                     .ShowBorders(true)
    .RemoteOperations(true)
     .ShowBorders(true)
    .Paging(p=>p.PageSize(10))
    .Pager(p=>p.ShowPageSizeSelector(true).AllowedPageSizes(new [] {10,20,40,80}))
    .SearchPanel(s=>s.Visible(true).HighlightCaseSensitive(true))
    .FilterRow(filterRow => filterRow
        .Visible(true)
        .ApplyFilter(GridApplyFilterMode.Auto)
    )
      .HeaderFilter(headerFilter => headerFilter.Visible(true))
        .Columns(columns => {

            columns.Add().Caption("Actions").Alignment(HorizontalAlignment.Center).CellTemplate(@<text>
                <a href="/Admin/StoreManagment/Edit?id=<%- data.StoreId %>"> Edit |  </a>
                <a href="/Admin/StoreManagment/Delete?id=<%- data.StoreId %>"> Delete | </a>
                <a href="/Admin/StoreManagment/Details?id=<%- data.StoreId %>"> Details </a>
            </text>).Width(150);
        })

    .Columns(columns => {

 @*       columns.AddFor(m => m.StoreId);*@

        columns.AddFor(m => m.StoreTitle);

        columns.AddFor(m => m.Address);

        columns.AddFor(m => m.Tele);

        columns.AddFor(m => m.Mobile);
    })
)

                </div>
            </div><!-- table-wrapper -->
        </div><!-- section-wrapper -->

    </div><!-- container -->
</div>